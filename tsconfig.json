{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es5", "es6", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
    "removeComments": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}